<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <widthOffset
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <width
                    granite:class="dx-dialog-dropdown-showhide"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="Define the width of the item."
                    fieldLabel="Width"
                    name="./width">
                    <granite:data
                        jcr:primaryType="nt:unstructured"
                        dx-dialog-dropdown-showhide-target=".list-option-width"/>
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/dexter/components/author/datasource/contextAwareDataSource"
                        sling:bucketName="cq:styleguide"
                        confName="components/flexContainer/widths"/>
                </width>
            </items>
        </widthOffset>
        <widthContainer
            granite:class="hide list-option-width dexter-Authoring--twoColumn"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <granite:data
                jcr:primaryType="nt:unstructured"
                dxshowhidetargetvalue="custom"/>
            <items jcr:primaryType="nt:unstructured">
                <width
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    fieldDescription="Set a custom item width."
                    fieldLabel="Width"
                    name="./widthCustomValue"/>
                <widthType
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="Type"
                    name="./widthCustomType">
                    <items jcr:primaryType="nt:unstructured">
                        <pixel
                            jcr:primaryType="nt:unstructured"
                            text="Pixels"
                            value="px"/>
                        <percent
                            jcr:primaryType="nt:unstructured"
                            text="%"
                            value="%"/>
                    </items>
                </widthType>
            </items>
        </widthContainer>
        <minHeight
            granite:class="dx-dialog-dropdown-showhide"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/select"
            fieldDescription="Define the minimum height of the item."
            fieldLabel="Min Height"
            name="./minHeight">
            <granite:data
                jcr:primaryType="nt:unstructured"
                dx-dialog-dropdown-showhide-target=".list-option-min-height"/>
            <datasource
                jcr:primaryType="nt:unstructured"
                sling:resourceType="/apps/dexter/components/author/datasource/contextAwareDataSource"
                sling:bucketName="cq:styleguide"
                confName="components/flexContainer/height"/>
        </minHeight>
        <minHeightContainer
            granite:class="hide list-option-min-height dexter-Authoring--twoColumn"
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <granite:data
                jcr:primaryType="nt:unstructured"
                dxshowhidetargetvalue="custom"/>
            <items jcr:primaryType="nt:unstructured">
                <minHeight
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    typeHint="Long"
                    fieldDescription="Set a custom item min height."
                    fieldLabel="Min Height"
                    name="./minHeightValue"/>
                <type
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="Type"
                    name="./minHeightType">
                    <items jcr:primaryType="nt:unstructured">
                        <pixel
                            jcr:primaryType="nt:unstructured"
                            text="Pixels"
                            value="px"/>
                        <percent
                            jcr:primaryType="nt:unstructured"
                            text="% of viewport"
                            value="vh"/>
                    </items>
                </type>
            </items>
        </minHeightContainer>
        <order
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
            typeHint="Long"
            fieldLabel="Order"
            fieldDescription="Define where the item should be placed visually."
            min="0"
            name="./order"/>
    </items>
</jcr:root>
