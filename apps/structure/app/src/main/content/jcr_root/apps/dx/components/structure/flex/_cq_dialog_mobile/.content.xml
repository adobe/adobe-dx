<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
    jcr:title="Mobile"
    margin="{Boolean}true"
    jcr:primaryType="nt:unstructured">
    <granite:rendercondition
        jcr:primaryType="nt:unstructured"
        property="lockMobile"
        sling:resourceType="dexter/components/author/renderConditions/dexterPolicy"/>
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <items
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                    fieldLabel="Items"
                    composite="{Boolean}true"
                    renderReadOnly="{Boolean}true">
                    <field
                        jcr:primaryType="nt:unstructured"
                        name="./mobileDefinitions"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items
                            jcr:primaryType="nt:unstructured">
                            <definitions
                                jcr:primaryType="nt:unstructured"
                                path="/apps/dx/components/structure/flex/cq:dialog_definitions"
                                sling:resourceType="granite/ui/components/coral/foundation/include"/>
                        </items>
                    </field>
                </items>
                <minHeightContainer
                    granite:class="dexter-Authoring--twoColumn"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <minHeight
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                            typeHint="Long"
                            fieldLabel="Min Height"
                            fieldDescription="Define the minimum height of the component."
                            min="0"
                            name="./mobileMinHeight"/>
                        <type
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Type"
                            name="./mobileMinHeightType">
                            <items jcr:primaryType="nt:unstructured">
                                <pixels
                                    jcr:primaryType="nt:unstructured"
                                    text="Pixels"
                                    value="px"/>
                                <viewport
                                    jcr:primaryType="nt:unstructured"
                                    text="% of viewport"
                                    value="vh"/>
                            </items>
                        </type>
                    </items>
                </minHeightContainer>
                <gap
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                    typeHint="Long"
                    fieldDescription="Space items"
                    fieldLabel="Gap (in PX)"
                    name="./mobileGap"/>
                <gradient
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete"
                    fieldDescription="Define left to right item orientation."
                    fieldLabel="Gradient"
                    name="./gradient">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="dx/admin/components/datasource/contextawaredatasource"
                        sling:bucketName="cq:styleguide"
                        confName="gradients"/>
                    <options
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/autocomplete/list"/>
                </gradient>
                <justification
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="Define left to right item orientation."
                    fieldLabel="Item Justification"
                    name="./mobileJustification">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="dx/admin/components/datasource/contextawaredatasource"
                        sling:bucketName="cq:styleguide"
                        confName="components/flexContainer/justification"/>
                </justification>
                <itemAlignment
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="How items are aligned on the row they sit on."
                    fieldLabel="Item Alignment"
                    name="./mobileItemAlignment">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/dexter/components/author/datasource/contextAwareDataSource"
                        sling:bucketName="cq:styleguide"
                        confName="components/flexContainer/itemAlignment"/>
                </itemAlignment>
                <contentAlignment
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="How entire rows are aligned in the flex container."
                    fieldLabel="Row Alignment"
                    name="./mobileContentAlignment">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/dexter/components/author/datasource/contextAwareDataSource"
                        sling:bucketName="cq:styleguide"
                        confName="components/flexContainer/contentAlignment"/>
                </contentAlignment>
                <itemContentAlignment
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldDescription="Define how the items content is aligned vertically."
                    fieldLabel="Item Content Alignment"
                    name="./mobileItemContentAlignment">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="/apps/dexter/components/author/datasource/contextAwareDataSource"
                        sling:bucketName="cq:styleguide"
                        confName="components/flexContainer/itemContentAlignment"/>
                </itemContentAlignment>
            </items>
        </column>
    </items>
</jcr:root>
